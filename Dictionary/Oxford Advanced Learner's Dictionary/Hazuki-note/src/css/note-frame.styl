.single-note {
    color: var(--text-color);
    padding: .5em;

    .note-block {
        &:not(:last-child) {
            margin-bottom: 1em;
        }

        .label {
            display: inline-block;
            font-family: Mulish;
            font-size: .9em;
            color: var(--note-text);
            text-transform: capitalize;
            padding: 7.5px .8em 7.5px .5em;
            background: var(--note-bg);
            border-left: 3px solid var(--note-border);
            margin-right: .5em;
            user-select: none;
        }

        /* 笔记来源 source */
        &[data-label='source'] {
            .breadcrumb {
                display: inline;
                font-family: Mulish;
                font-size: .9em;
                line-height: 2rem;

                .ic {
                    color: var(--grey-4);
                }

                span.current {
                    color: var(--primary-color);
                    padding: 4px 8px;
                    border-radius: 10px;
                    background-color: var(--color-red-a1);
                    transition(background-color);

                    &:hover {
                        background-color: var(--color-red-a3);
                    }
                }
            }
        }

        /* 笔记原文 original text */
        &[data-label='original text'] {
            .md {
                font-family: var(--font-family-sans-serif);
                padding: 1em;
                margin-top: 1em;
                min-height: 1.5em;
                border-left: 4px solid var(--border-color);
                border-top-left-radius: 10px;
                border-bottom-left-radius: 10px;
                position: relative;
                --border-color: #d91b3e;

                &::before {
                    content: '';
                    border: 15px solid transparent;
                    border-right: 8px solid var(--border-color);
                    position: absolute;
                    top: 1em;
                    left: -23px;
                }

                .keyword {
                    color: var(--color-blue);
                    font-weight: bold;
                }
            }
        }

        /* 笔记 notes */
        &[data-label='notes'] {
            .md {
                margin-top: 1em;
                padding-left: 3px;
            }
        }

        /* 笔记卡片 note cards */
        .note-cards, .note-card {
            margin: .8rem 0;
        }

        .note-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;

            .note-card {
                margin: unset;
            }
        }

        .note-card {
            display: block;
            font-size: .9em;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, .1);
            position: relative;

            &::before, &::after {
                font-family: var(--font-family-serif);
                font-size: .75rem;
            }

            &::before {
                content: attr(data-label);
                display: inline-block;
                color: white;
                background-color: #8e7cc3;
                border-radius: var(--font-size);
                padding: 2px 10px;
                text-transform: capitalize;
                margin-bottom: .5rem;
            }

            &::after {
                content: attr(data-comment);
                color: var(--text-grey-color);
                position: absolute;
                top: 15px;
                right: 15px;
            }
        }
    }

    /* 笔记标签 tags */
    .tags {
        margin-top: 1.5rem;

        .tag {
            display: inline-block;
            font-family: Mulish;
            font-size: .75rem;
            line-height: 2;
            color: var(--note-text);
            padding: 0 .5rem 0 .3125rem;
            background: var(--note-bg);
            border-radius: .3125rem;
            cursor: default;

            &:not(:last-child) {
                margin-right: .625rem;
            }
        }
    }
}
